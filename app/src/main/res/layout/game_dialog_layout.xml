<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="20sp">

    <ViewFlipper
        android:id="@+id/create_game_flipper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:measureAllChildren="false">

        <LinearLayout
            android:id="@+id/name"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" >

            <EditText
                android:id="@+id/game_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="@string/game_name"
                android:textAlignment="center"
                android:ems="10"
                android:autofillHints="@string/game_name" />

            <CheckBox
                android:id="@+id/requires_scenario_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/requires_scenario" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/game_type"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" >

            <Spinner
                android:id="@+id/game_type_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

            </Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ScrollView
                android:id="@+id/scenarios_scroll_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fillViewport="true">
                <LinearLayout
                    android:id="@+id/scenarios"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </LinearLayout>
            </ScrollView>
            <Button
                android:id="@+id/add_scenario_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/expansions_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ScrollView
                android:id="@+id/expansions_scroll_view"
                android:fillViewport="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/expansions"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </LinearLayout>
            </ScrollView>
            <Button
                android:id="@+id/add_expansion_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/number_of_players"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/min_player_number"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="2"
                    android:textAlignment="center"
                    android:inputType="numberDecimal"
                    android:importantForAutofill="no" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/max_game_number"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="2"
                    android:textAlignment="center"
                    android:inputType="numberDecimal"
                    android:importantForAutofill="no" />
            </LinearLayout>

        </LinearLayout>
    </ViewFlipper>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end">
        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/previous_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/back" />

        <Button
            android:id="@+id/next_button"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/next"/>
    </LinearLayout>
</LinearLayout>